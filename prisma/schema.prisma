generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  tokens    Token[]
  createdAt DateTime @default(now())
}

model Token {
  id        Int      @id @default(autoincrement())
  value     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  deviceId  String?
  createdAt DateTime @default(now())
  expiresAt DateTime?
  lastUsed  DateTime?
}
